@model SFServer.Shared.Server.Dashboard.DashboardMetricsDTO
<div class="card">
    <div class="card-header">LTV Cohorts</div>
    <div class="card-body">
        <canvas id="ltvChart"></canvas>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function(){
        const ctx = document.getElementById('ltvChart').getContext('2d');
        new Chart(ctx,{type:'line',data:{labels:[7,14,30],datasets:Model.LtvCohorts.map((c,i)=>({label:`Cohort ${i+1}`,data:c}))}});
    });
</script>
