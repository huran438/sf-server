@model SFServer.UI.Models.UserProfiles.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group mb-3">
        <label asp-for="Credential"></label>
        <input asp-for="Credential" class="form-control" />
        <span asp-validation-for="Credential" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Login</button>
    <a asp-controller="Account" asp-action="LoginGoogle">Login with Google</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}