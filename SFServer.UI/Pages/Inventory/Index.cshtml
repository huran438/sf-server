@page
@model SFServer.UI.Pages.Inventory.InventoryPageModel
@{
    ViewData["Title"] = "Inventory";
}

<h1>Inventory</h1>
<p>
    <a class="btn btn-primary" asp-page="/Inventory/Create">Add Item</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Title</th>
        <th>Type</th>
        <th>Rarity</th>
        <th>Prices</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Type</td>
            <td>@item.Rarity</td>
            <td>
                @foreach (var p in item.Prices)
                {
                    var currency = Model.Currencies.FirstOrDefault(c => c.Id == p.Key);
                    <div>@(currency?.Title ?? p.Key.ToString()): @p.Value</div>
                }
            </td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-page="/Inventory/Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>
