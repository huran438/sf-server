@page
@model SFServer.UI.Pages.Inventory.InventoryPageModel
@{
    ViewData["Title"] = "Inventory";
}

<h1>Inventory</h1>
<table class="table">
    <thead>
    <tr>
        <th>Title</th>
        <th>Type</th>
        <th>Rarity</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Type</td>
            <td>@item.Rarity</td>
            <td>@item.Price</td>
        </tr>
    }
    </tbody>
</table>
